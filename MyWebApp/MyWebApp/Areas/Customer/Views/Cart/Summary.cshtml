@model MyWebApp.Models.ViewModel.CartVM

<form method="post">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Biling details</h5>
                </div>
                <div class="card-body">
                    <form>
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row mb-4">
                            <div class="col">
                                <div class="form-outline">
                                    <label for="Name" class="form-label">Name</label>
                                    <input type="text" class="form-control" asp-for="@Model.OrderHeader.Name" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-outline">
                                    <label for="Address" class="form-label">Address</label>
                                    <input type="text" class="form-control" asp-for="@Model.OrderHeader.Address" />
                                </div>
                            </div>
                        </div>

                        <!-- Text input -->
                        <div class="form-outline mb-4">
                            <label for="Phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.Phone" />
                        </div>

                        <!-- Text input -->
                        <div class="form-outline mb-4">
                            <label for="City" class="form-label">City</label>
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.City" />
                        </div> 
                        <div class="form-outline mb-4">
                            <label for="Carrier" class="form-label">Carrier</label>
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.Carrier" />
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label for="State" class="form-label">State</label>
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.State" />
                        </div>

                        <!-- Number input -->
                        <div class="form-outline mb-4">
                            <label for="Postal Code" class="form-label">Postal Code</label>
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.PostalCode" />
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-center mb-2">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form7Example8" checked />
                            <label class="form-check-label" for="form7Example8">
                                Create an account?
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Summary</h5>
                </div>
                <div class="card-body mb-4">
                    @foreach (var details in @Model.ListOfCart)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <span class="mt-3">@details.Product.Name</span>
                            <span class="mt-3"> QTY: @details.Count</span>
                            <span class="mt-3">@(((details.Product.Price) * (details.Count)).ToString("c"))</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between lh-sm mt-3">
                        <div>
                            <strong>Total Amount</strong>
                            <strong>
                                <p class="mb-0">(including VAT)</p>
                            </strong>
                            <span><strong>@Model.OrderHeader.OrderTotal</strong></span>
                        </div>


                    </li>


                    <button type="submit" class=" w-100 btn btn-danger btn-lg">
                        Make purchase
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>